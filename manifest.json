{
  "manifest_version": 2,

  "name": "Trellist",
  "description": "This extension displays a board (lists, cards, checklists and attachments) in an HTML printable list.",
  "version": "0.1.0",

  "content_scripts": [
		{
			"matches": ["https://trello.com/*"],
			"js": ["js/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://api.trello.com/"
  ]
}
